{
  "Configuration": {
    "AppName": "AlarmApp",
    "AlarmJobSchedule": "0 0/1 * 1/1 * ? *",
    "VariableColor": "\u001b[32m",
    "ResetColor": "\u001b[0m",
    "QuartzSettings": {
      "SchedulerId": "1234",
      "SchedulerName": "Alarm scheduler",
      "MaxBatchSize": 10,
      "InterruptJobsOnShutdown": true,
      "InterruptJobsOnShutdownWithWait": true
    }
  },
  "Logging": {
    "IncludeScopes": true,
    "LogLevel": {
      "Default": "Information",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:dd-MM-yyyy HH:mm:ss} [{Level}] {Message:lj}{NewLine}{Exception}",
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Literate, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Temp\\Logs\\AlarmApp.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:dd-MM-yyyy HH:mm:ss} [AlarmApp] [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Debug"
        }
      }
    ],
    "Enrich": [
      "FromLogContext"
    ]
  }
}